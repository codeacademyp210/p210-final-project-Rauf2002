<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    @RenderSection("style",false)
    <!-- Global CSS starts -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/55ffc5f93b.js"></script>
    <link rel="stylesheet" href="~/Areas/Admin/Public/css/global.css">
    <!-- Fonts Start-->
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Acme&display=swap" rel="stylesheet">
    <!-- Fonts End -->
    <!-- Sweet Alert Starts-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <!-- Sweet Alert Ends -->
    <!-- Global CSS ends -->
</head>
<body>
    <!-- Same Header Starts -->
    <header>
        <div class="container">
            <div class="row d-flex justify-content-between py-4">
                <div class="col-4">
                    <h2 class="adminName">Rauf Allahverdiyev</h2>
                </div>
                <div class="col-3 d-flex align-items-center justify-content-end">
                    <a href="@Url.Action("Index","Setting")"><i class="fas fa-cog" style="color:#212529;margin-right:1rem;font-size:1.5rem"></i></a>
                    <i class="fas fa-sign-out-alt logOut"></i>
                </div>
            </div>
            <div class="row py-2">
                <div class="col-12">
                    <ul class="menuUl">
                        <li><a href="@Url.Action("Index","Allergy")">Allergies</a></li>
                        <li><a href="@Url.Action("Index","Appointment")">Appointments</a></li>
                        <li><a href="@Url.Action("Index","Department")">Departments</a></li>
                        <li><a href="@Url.Action("Index","Doctor")">Doctors</a></li>
                        <li><a href="@Url.Action("Index","Gallery")">Gallery</a></li>
                        <li><a href="@Url.Action("Index","Message")">Messages</a></li>
                        <li><a href="@Url.Action("Index","Nurse")">Nurses</a></li>
                        <li><a href="@Url.Action("Index","Patient")">Patients</a></li>
                        <li><a href="@Url.Action("Index","Vaccine")">Vaccines</a></li>

                    </ul>
                </div>
            </div>
        </div>
    </header>
    <!-- Same Header Ends -->
    @RenderBody()

    @RenderSection("script", false)

    <!-- Logout JS Starts -->
    <script>
        $('.logOut').click(function () {
            swal({
                title: "Are you sure?",
                text: "You are going to log out.",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete)
                    {
                       $.ajax({
                            url: "Login/Signout",
                            type: "GET"
                       });
                        location.reload();
                    } 
                });
        });</script>
    <!-- Logout JS Ends -->
</body>
</html>
