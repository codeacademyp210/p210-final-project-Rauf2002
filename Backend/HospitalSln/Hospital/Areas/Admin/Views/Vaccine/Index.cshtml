@model IEnumerable<Hospital.Models.Vaccines>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section style{
    <title>Vaccines</title>
}

<!-- Content Starts -->
<main>
    <div class="container">
        <div class="row my-5 d-flex justify-content-between">
            <div class="col-3">
                <h1 class="tableName">Vaccines</h1>
            </div>
            <div class="col-3 d-flex justify-content-end">
                <a href="@Url.Action("Create","Vaccine")"><button type="button" class="btn btn-primary create">Create</button></a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Forbidden Allergies</th>
                            <th>Edit / Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vaccine in Model)
                        {
                            var list = vaccine.AllergiesVaccines.Where(v => v.VaccineId == vaccine.Id).ToList();
                            string allergiesName = "";
                            @foreach (var item in list)
                            {
                                allergiesName += item.Allergies.NameEng;
                            }
                            var seperatedNames = allergiesName.Split();
                            <tr>
                                <td class="d-none">@vaccine.Id</td>
                                <td>@vaccine.Name</td>
                                <td>@seperatedNames</td>
                                <td>
                                    <a href="@Url.Action("Edit","Vaccine",new { Id = vaccine.Id})"><i class="far fa-edit mr-1 edit"></i></a>
                                    <i class="fas fa-trash delete" style="cursor:pointer"></i>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
<!-- Content Ends -->



@section script{
    <!-- Delete AJAX Starts -->
    <script>
        $('.delete').click(function () {

            var _this = this;

            swal({
                title: "Are you sure?",
                text: "Once deleted, you will not be able to recover this  file!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {

                        var myId = _this.parentElement.parentElement.firstElementChild.innerHTML;
                        $.ajax({
                            url: "Gallery/Delete",
                            type: "GET",
                            data: ({ Id: myId })
                        });
                        location.reload();
                    }
                });
        });
    </script>
    <!-- Delete AJAX Ends -->
}
