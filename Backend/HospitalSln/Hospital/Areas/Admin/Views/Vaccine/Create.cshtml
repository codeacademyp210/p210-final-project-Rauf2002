@model Hospital.Models.ViewModelHome

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Vaccines</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2" for="vaccineName">Vaccine Name</label>
        <div class="col-md-10">
            <input type="text" name="Name" id="vaccineName" class="form-control"/>
        </div>
    </div>
        <div class="form-group">
            <label class="control-label col-md-2">Select Allergies</label>
            <div class="col-md-10">
                <select multiple>
                    @foreach (var allergy in Model.Allergies)
                    {
                    <a href="@Url.Action("Create","Vaccine",new { allergyId = allergy.Id})"><option>@allergy.NameEng</option> </a>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
