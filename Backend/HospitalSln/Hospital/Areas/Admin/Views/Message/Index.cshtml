@model IEnumerable<Hospital.Models.Messages>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section style{
    <title>Messages</title>
}

<!-- Content Starts -->
<main>
    <div class="container">
        <div class="row my-5 d-flex justify-content-between">
            <div class="col-3">
                <h1 class="tableName">Messages</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model)
                        {
                            <tr>
                                <td>@message.Name</td>
                                <td>@message.Email</td>
                                <td>@message.Phone</td>
                                <td>@Html.Raw(message.Message)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
<!-- Content Ends -->